<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo4"
    android:alpha="0.9"
    tools:context=".Agua">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:src="@drawable/header"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:text="Servicio de Agua"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_weight="1"
            />
        <ImageView
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:scaleType="fitXY"
            android:src="@drawable/agua"
            android:layout_weight="0"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kilovatios:"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_weight="2"
            android:textSize="20sp"
            />
        <EditText
            android:id="@+id/txtKilovatiosAgua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese el consumo del Mes"
            android:backgroundTint="@color/white"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Precio:"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_weight="2"
            android:textSize="20sp"
            />
        <EditText
            android:id="@+id/txtPrecioAgua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese el valor a pagar"
            android:backgroundTint="@color/white"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mes:"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_weight="2"
            android:textSize="20sp"
            />
        <EditText
            android:id="@+id/txtMesAgua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese el mes"
            android:backgroundTint="@color/white"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            />
    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <Button
        android:id="@+id/btnRegistrarAgua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrar Agua"
        android:textSize="20sp"
        android:backgroundTint="#009f4d"
        />

</LinearLayout>