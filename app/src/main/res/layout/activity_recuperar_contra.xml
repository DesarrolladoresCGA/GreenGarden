<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo4"
    android:gravity="center"
    android:weightSum="1"
    android:alpha="0.9"
    tools:context=".RecuperarContra">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.4"
        android:orientation="vertical"
        android:background="@drawable/fondo5"
        android:gravity="center"
        android:padding="60dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RECUPERAR CONTRASEÃ‘A"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="35dp"
            android:textStyle="bold"
            android:layout_marginBottom="80dp"
            />
        <EditText
            android:id="@+id/txtCorreoRecuperarContra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:hint="Correo"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="20sp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="30dp"
            >
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/btnEnviarRecuperarContra"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:text="Enviar"
                android:textSize="20sp"
                android:backgroundTint="#009f4d"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                />
            <Button
                android:id="@+id/btnCancelarRecuperarContra"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:text="Cancelar"
                android:textSize="20sp"
                android:backgroundTint="#009f4d"
                android:textStyle="bold"
                android:layout_weight="1"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>